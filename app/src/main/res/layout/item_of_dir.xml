<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_of_item"
        android:src="@mipmap/ic_folder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/nameOfDir"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_of_item"
        android:textAppearance="@style/DirectoryText"
        tools:text="test"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />
    <TextView
        android:layout_margin="15dp"
        android:id="@+id/info"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_of_item"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="test"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nameOfDir"
        android:layout_toEndOf="@+id/nameOfDir" />
</RelativeLayout>